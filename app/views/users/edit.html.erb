<div class="py-5">
    <%= form_with(model: @user, local: true) do |f| %>
    
    <div class="form-group">
        <%= f.label :画像 %>
        <%= f.file_field :image, class: "image" %>
        <small id="title-tip" class="form-text text-muted">
            プロフィール画像を登録してみよう！
        </small>
    </div>
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :profile, 'Profile' %>
      <%= f.text_area :profile, class: 'form-control' , rows:10%>
      <small id="title-tip" class="form-text text-muted">
            プロフィールを書いてみよう！
      </small>
    </div>

    <%= f.submit 'プロフィールを更新する', class: 'btn btn-info btn-block' %>
    <% end %>
    <div class="form-group">
        <%= link_to "パスワードを変更する", new_password_reset_path %>
    </div>
  </div>
</div>


      