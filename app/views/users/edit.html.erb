<div class="py-5">
    <%= form_with(model: @user, local: true) do |f| %>
    
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, class: 'form-control' %>
      <small id="content-tip" class="form-text text-muted">
        　変更したい名前を入力してください。
      </small>
    </div>

    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, class: 'form-control' %>
      <small id="content-tip" class="form-text text-muted">
        　変更したいメールアドレスを入力してください。
      </small>
    </div>
    
    <div class="form-group">
      <%= f.label :password, 'Password' %>
      <%= f.password_field :password, class: 'form-control' %>
      <small id="content-tip" class="form-text text-muted">
        　変更したいパスワードを入力してください。
      </small>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <small id="content-tip" class="form-text text-muted">
        　変更したいパスワードをもう一度入力してください。
      </small>
    </div>

    <div class="form-group">
      <%= f.label :profile, 'Profile' %>
      <%= f.text_area :profile, class: 'form-control' , rows:10%>
      <small id="title-tip" class="form-text text-muted">
            プロフィールを書いてみよう！
      </small>
    </div>

    <%= f.submit 'プロフィールを更新する', class: 'btn btn-info btn-block' %>
    <% end %>
  </div>
</div>


      