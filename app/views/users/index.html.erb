<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1>Users</h1>
      <p class="lead text-muted">ユーザー一覧</p>
      <% unless logged_in? %>
          <a href="signup" class="btn btn-primary my-2">ユーザー登録をしてみよう！</a>
      <% end %>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img class="rounded img-fluid" src="<%= gravatar_url(user, { size: 300 }) %>" alt="">
            <div class="card-body">
              <p class="card-text"><p><%= link_to user.name, user_path(user) %></p></p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted"></small>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</main>